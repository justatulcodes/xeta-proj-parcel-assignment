<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_gray"
    android:fitsSystemWindows="true">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/header_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primary_blue"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_back"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="4dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/details_identified"
            android:textColor="@color/text_light"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="40dp" />

        <ImageView
            android:id="@+id/iv_notifications_details"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_notifications"
            android:background="@drawable/white_circle_background"
            android:padding="6dp" />

    </LinearLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/header_layout"
        app:layout_constraintBottom_toBottomOf="parent"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Description Text -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/below_are_riders_available"
                android:textColor="@color/text_secondary"
                android:textSize="14sp"
                android:layout_marginBottom="16dp" />

            <!-- Scanned Image Preview -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="300dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                android:layout_marginBottom="16dp">

                <ImageView
                    android:id="@+id/iv_scanned_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/sample_prescription"
                    android:background="@color/card_background" />

                <!-- Corner frame overlay -->
                <View
                    android:layout_width="150dp"
                    android:layout_height="120dp"
                    android:layout_gravity="center"
                    android:background="@drawable/scan_frame_overlay" />

            </androidx.cardview.widget.CardView>

            <!-- Riders Available Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/riders_available"
                android:textColor="@color/text_primary"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="12dp" />

            <!-- Riders List -->
            <LinearLayout
                android:id="@+id/riders_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="16dp">

                <!-- Rider 1 - Patrick Frick -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="2dp"
                    android:layout_marginBottom="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="16dp"
                        android:gravity="center_vertical"
                        android:background="@color/card_background">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/patrick_frick"
                                android:textColor="@color/text_primary"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Area : Northeast"
                                android:textColor="@color/text_secondary"
                                android:textSize="12sp"
                                android:layout_marginTop="4dp" />

                        </LinearLayout>

                        <Button
                            android:id="@+id/btn_assign_patrick"
                            android:layout_width="wrap_content"
                            android:layout_height="36dp"
                            android:text="@string/assign"
                            android:textColor="@color/white"
                            android:backgroundTint="@color/status_green"
                            android:textSize="12sp"
                            android:includeFontPadding="false"
                            android:layout_marginEnd="8dp"
                            android:minWidth="0dp"
                            android:paddingHorizontal="16dp" />

                        <Button
                            android:id="@+id/btn_cancel_patrick"
                            android:layout_width="wrap_content"
                            android:layout_height="36dp"
                            android:text="@string/cancel"
                            android:textColor="@color/white"
                            android:includeFontPadding="false"
                            android:backgroundTint="@color/status_red"
                            android:textSize="12sp"
                            android:minWidth="0dp"
                            android:paddingHorizontal="16dp" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- Rider 2 - Mary James -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="2dp"
                    android:layout_marginBottom="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="16dp"
                        android:gravity="center_vertical"
                        android:background="@color/card_background">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/mary_james"
                                android:textColor="@color/text_primary"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Area : Northeast"
                                android:textColor="@color/text_secondary"
                                android:textSize="12sp"
                                android:layout_marginTop="4dp" />

                        </LinearLayout>

                        <Button
                            android:id="@+id/btn_assign_mary"
                            android:layout_width="wrap_content"
                            android:layout_height="36dp"
                            android:text="@string/assign"
                            android:textColor="@color/white"
                            android:backgroundTint="@color/status_green"
                            android:textSize="12sp"
                            android:includeFontPadding="false"
                            android:layout_marginEnd="8dp"
                            android:minWidth="0dp"
                            android:paddingHorizontal="16dp" />

                        <Button
                            android:id="@+id/btn_cancel_mary"
                            android:layout_width="wrap_content"
                            android:layout_height="36dp"
                            android:text="@string/cancel"
                            android:textColor="@color/white"
                            android:backgroundTint="@color/status_red"
                            android:textSize="12sp"
                            android:includeFontPadding="false"
                            android:minWidth="0dp"
                            android:paddingHorizontal="16dp" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <!-- Delivery Address Section -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                android:background="@color/primary_blue">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:background="@color/primary_blue">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="8dp">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_location"
                            app:tint="@color/white" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/delivery_address"
                            android:textColor="@color/text_light"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:layout_marginStart="8dp" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_address_line1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/sample_address_line1"
                        android:textColor="@color/text_light"
                        android:textSize="14sp"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/tv_address_line2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/sample_address_line2"
                        android:textColor="@color/text_light"
                        android:textSize="14sp"
                        android:layout_marginBottom="12dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/area_zone"
                            android:textColor="@color/text_light"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/tv_zone_sector"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/sample_zone_sector"
                            android:textColor="@color/text_light"
                            android:textSize="12sp"
                            android:background="@drawable/zone_background"
                            android:paddingHorizontal="8dp"
                            android:paddingVertical="4dp" />

                        <Button
                            android:id="@+id/btn_resend"
                            android:layout_width="wrap_content"
                            android:layout_height="32dp"
                            android:text="@string/resend"
                            android:textColor="@color/primary_blue"
                            android:backgroundTint="@color/white"
                            android:textSize="12sp"
                            android:layout_marginStart="8dp"
                            android:minWidth="0dp"
                            android:paddingHorizontal="12dp" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>